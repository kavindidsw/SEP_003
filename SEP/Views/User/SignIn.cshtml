@model SEP.Models.User
@section Navigation{

    <header class="fallone-navbar" data-id="default-navbar">
        <nav class="navbar navbar-default">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        <img src="~/Content/assets/images/logo.png" alt="Takeaway logo" class="img-responsive" />
                    </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active">@Html.ActionLink("Home", "Index") </li>
                       
                        <li>@Html.ActionLink("Sign Up", "Signup") </li>
                    </ul>


                    @Html.Partial("_LoginPartial")
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container -->
        </nav>
    </header>

}
    
  
<section class="text-white">
    <div class="cover-4"></div>
    <!-- Login area -->
    <!-- .container -->
    <div class="container">
        <!-- .row -->
        <div class="row">
            <!-- .col-md-12 -->
            <div class="col-md-12">
                <!-- .row -->
                <div class="row">
                    <div class="col-md-4 col-md-offset-8 col-lg-offset-8 mar-bottom-md">
                        <h1 class="text-uppercase text-primary wow fadeInDown text-center" data-wow-duration=".8s" data-wow-delay=".2s">Take a tour</h1>
                        <p class="text-center">
                            <i class="text-muted text-capitalize">Security is the degree of resistance.</i>
                        </p>
                        <div class="text-center">
                            <span class="separator">
                                <i class="icon icon-small iline2-lock22 text-primary no-margin"></i>
                            </span>
                        </div>
                        <p class="wow fadeInUp text-center" data-wow-duration="1s" data-wow-delay=".3s">
                          
                        </p>
                        <form action="" method="post" class="mar-top-lg error wow fadeInUp" data-wow-duration="1s" data-wow-delay=".6s" novalidate="" name="loginForm">
                            @using (Html.BeginForm())
                            {
                            <div class="form-group control-group">
                                <input type="text" name="Username" class="form-control input-lg" id="Username" placeholder="Username* :" required="" data-validation-required-message="Please enter your email address." />
                                
                                 <p class="help-block"></p>
                                
                            </div>



                            <div class="form-group control-group">
                                <input type="password" name="Password" class="form-control input-lg" id="Password" placeholder="Password* :" required="" data-validation-required-message="Please enter your password." />
                                <p class="help-block"></p>
                            </div>
                            @ViewData["Name"]
                            <div class="checkbox control-group">
                                <label>
                                    <input type="checkbox" name="Rememberme" id="Rememberme" /> Remember me.
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-full btn-lg">Submit</button>
                           

                            }
                        </form>
                        <a href="@Url.Action("PasswordRecovery", "User")">Do you Forgot your Password</a>

                
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!--/ Login area -->
</section>
    
    
    
    
