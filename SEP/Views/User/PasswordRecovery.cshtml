@model SEP.Models.editUser
@section Navigation{

    <header class="fallone-navbar" data-id="default-navbar">
        <nav class="navbar navbar-default">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">
                        <img src="~/Content/assets/images/logo.png" alt="Takeaway logo" class="img-responsive" />
                    </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="active">@Html.ActionLink("Home", "Index") </li>
                        
                        <li>@Html.ActionLink("Sign Up", "Signup") </li>
                    </ul>


                    @Html.Partial("_LoginPartial")
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container -->
        </nav>
    </header>

}

<div class="container">
    <div class="portlet-body" style="width:350px; float:inherit; padding:10px;padding-top:50px; width: 90%; margin: 0 auto; ">

        @if (ViewData["Success"] != null)
        {
            <div class="alert alert-success">
                @ViewData["Success"]
            </div>
        }
        @if (ViewData["Exception"] != null)
        {
            <div class="alert alert-success">
                @ViewData["Exception"]
            </div>
        }

       @using (Html.BeginForm("PasswordRecovery", "User"))
       {
        <input type="email" name="Email" placeholder="Enter Your Email" />
            <button type="submit" class="btn green" id="btnChange">Send Reset code</button>
       }

    </div>
</div>


