@model SEP.Models.UserImage

@section Navigation{

}





<div class="portlet-body" style="width:350px; float:inherit; padding:10px; width: 50%; margin: 0 auto; ">

    @if (ViewData["Sucess"] != null)
            {
        <div class="alert alert-success">
            @ViewData["Sucess"]
        </div>
    }

    @if (ViewData["Exception"] != null)
            {
        <div class="alert alert-danger">
            @ViewData["Exception"]
        </div>
    }

    @if (Model.ProfPic != null)
    {
        <img id="getimage" src="data:image/png;base64,@Convert.ToBase64String(Model.ProfPic, 0, Model.ProfPic.Length)" width="100" />
    }
    else
    {
        <img id="getimage" src="~/Content/propic.png" width="100" />
    }



    @using (Html.BeginForm("saveimage", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        <input type="hidden" name="UserID" id="UserID" value="@Model.UserId" />


                    <label class="control-label">Select File</label>
                        <input type="file" id="File" name="File" onchange="readURL(this);" />
                       



                        <button type="submit" class="btn green" id="btnChange">Upload</button>

    }
</div>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#getimage')
                    .attr('src', e.target.result)
                    .width(150)
                    .height(200);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

